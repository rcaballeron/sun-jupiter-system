{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
    },
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "initmesa",
            "type": "shell",
            "command": ". /home/rcaballeron/MESA/sdk/20180822/bin/mesasdk_init.sh",
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": ". /home/rcaballeron/MESA/sdk/20180822/bin/mesasdk_init.sh;./mk",
            "dependsOn":[
                "initmesa"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": ". /home/rcaballeron/MESA/sdk/20180822/bin/mesasdk_init.sh; ./clean",
            "group": "build"
        }
    ]
}
