keywords = {Angular Momentum,Angular Velocity,Carbon,Chemical Composition,Convection,Eddington Approximation,Gravitational Collapse,Main Sequence Stars,Momentum Transfer,Radial Velocity,Secular Variations,Stellar Evolution,Stellar Models,Stellar Rotation,Subject headings,Thermal Instability,Time Dependence,collapsed-stars,evolution-stars,gravitation-stars,interiors-stars,rotation},
