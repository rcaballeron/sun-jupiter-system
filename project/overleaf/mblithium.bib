@article{Ud-Doula2007,
abstract = {Building upon our previous MHD simulation study of magnetic channeling in radiatively driven stellar winds, we examine here the additional dynamical effects of stellar {\{}$\backslash$em rotation{\}} in the (still) 2-D axisymmetric case of an aligned dipole surface field. In addition to the magnetic confinement parameter {\$}\backslasheta{\_}{\{}\backslashast{\}}{\$} introduced in Paper I, we characterize the stellar rotation in terms of a parameter {\$}W \backslashequiv V{\_}{\{}\backslashrm{\{}rot{\}}{\}}/V{\_}{\{}\backslashrm{\{}orb{\}}{\}}{\$} (the ratio of the equatorial surface rotation speed to orbital speed), examining specifically models with moderately strong rotation {\$}W ={\$} 0.25 and 0.5, and comparing these to analogous non-rotating cases. Defining the associated Alfv$\backslash$'{\{}e{\}}n radius {\$}R{\_}{\{}\backslashrm{\{}A{\}}{\}} \backslashapprox \backslasheta{\_}{\{}\backslashast{\}}{\^{}}{\{}1/4{\}} \backslashRstar{\$} and Kepler corotation radius {\$}R{\_}{\{}\backslashrm{\{}K{\}}{\}} \backslashapprox W{\^{}}{\{}-2/3{\}} \backslashRstar{\$}, we find rotation effects are weak for models with {\$}R{\_}{\{}\backslashrm{\{}A{\}}{\}} {\textless} R{\_}{\{}\backslashrm{\{}K{\}}{\}}{\$}, but can be substantial and even dominant for models with {\$}R{\_}{\{}\backslashrm{\{}A{\}}{\}} \backslashgtwig R{\_}{\{}\backslashrm{\{}K{\}}{\}}{\$}. In particular, by extending our simulations to magnetic confinement parameters (up to {\$}\backslasheta{\_}{\{}\backslashast{\}} = 1000{\$}) that are well above those ({\$}\backslasheta{\_}{\{}\backslashast{\}} = 10{\$}) considered in Paper I, we are able to study cases with {\$}R{\_}{\{}\backslashrm{\{}A{\}}{\}} \backslashgg R{\_}{\{}\backslashrm{\{}K{\}}{\}}{\$}; we find that these do indeed show clear formation of the {\{}$\backslash$em rigid-body{\}} disk predicted in previous analytic models, with however a rather complex, dynamic behavior characterized by both episodes of downward infall and outward breakout that limit the buildup of disk mass. Overall, the results provide an intriguing glimpse into the complex interplay between rotation and magnetic confinement, and form the basis for a full MHD description of the rigid-body disks expected in strongly magnetic Bp stars like {\$}\backslashsigma{\$} Ori E.},
