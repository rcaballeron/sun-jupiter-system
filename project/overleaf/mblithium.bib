@article{Ud-Doula2008,
abstract = {We examine the angular momentum loss and associated rotational spindown for magnetic hot stars with a line-driven stellar wind and a rotation-aligned dipole magnetic field. Our analysis here is based on our previous 2-D numerical MHD simulation study that examines the interplay among wind, field, and rotation as a function of two dimensionless parameters, one characterizing the wind magnetic confinement ({\$}\backslasheta{\_}{\{}\backslashast{\}} \backslashequiv B{\_}{\{}eq{\}}{\^{}}{\{}2{\}} R{\_}{\{}\backslashast{\}}{\^{}}{\{}2{\}}/{\{}\backslashdot M{\}} v{\_}{\{}\backslashinfty{\}}{\$}), and the other the ratio ({\$}W \backslashequiv V{\_}{\{}rot{\}}/V{\_}{\{}orb{\}}{\$}) of stellar rotation to critical (orbital) speed. We compare and contrast the 2-D, time variable angular momentum loss of this dipole model of a hot-star wind with the classical 1-D steady-state analysis by Weber and Davis (WD), who used an idealized monopole field to model the angular momentum loss in the solar wind. Despite the differences, we find that the total angular momentum loss {\$}{\{}\backslashdot J{\}}{\$} averaged over both solid angle and time follows closely the general WD scaling {\$}{\{}\backslashdot J{\}} = (2/3) {\{}\backslashdot M{\}} \backslashOmega R{\_}{\{}A{\}}{\^{}}{\{}2{\}}{\$}, where {\$}{\{}\backslashdot M{\}}{\$} is the mass loss rate, {\$}\backslashOmega{\$} is the stellar angular velocity, and {\$}R{\_}{\{}A{\}}{\$} is a characteristic Alfv$\backslash$'{\{}e{\}}n radius. However, a key distinction here is that for a dipole field, this Alfv$\backslash$'{\{}e{\}}n radius has a strong-field scaling {\$}R{\_}{\{}A{\}}/R{\_}{\{}\backslashast{\}} \backslashapprox \backslasheta{\_}{\{}\backslashast{\}}{\^{}}{\{}1/4{\}}{\$}, instead of the scaling {\$}R{\_}{\{}A{\}}/R{\_}{\{}\backslashast{\}} \backslashsim \backslashsqrt{\{}\backslasheta{\_}{\{}\backslashast{\}}{\}}{\$} for a monopole field. This leads to a slower stellar spindown time that in the dipole case scales as {\$}\backslashtau{\_}{\{}spin{\}} = \backslashtau{\_}{\{}mass{\}} 1.5k/\backslashsqrt{\{}\backslasheta{\_}{\{}\backslashast{\}}{\}}{\$}, where {\$}\backslashtau{\_}{\{}mass{\}} \backslashequiv M/{\{}\backslashdot M{\}}{\$} is the characteristic mass loss time, and {\$}k{\$} is the dimensionless factor for stellar moment of inertia. The full numerical scaling relation we cite gives typical spindown times of order 1 Myr for several known magnetic massive stars.},
archivePrefix = {arXiv},
arxivId = {0810.4247},
author = {Ud-Doula, Asif and Owocki, Stanley P. and Townsend, Richard H. D.},
