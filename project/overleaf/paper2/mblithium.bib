issn = {15384357},
journal = {Astrophys. J.},
keywords = {stars: coronae,stars: late-type,stars: magnetic field,stars: mass-loss,stars: winds, outflows,turbulence},
month = {aug},
number = {1},
title = {{Testing a predictive theoretical model for the mass loss rates of cool stars}},
